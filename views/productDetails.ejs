<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              background: "rgb(218, 227, 229)",
              primaryText: "rgb(33, 33, 33)",
              accent: "rgb(105, 170, 215)",
              cta: "rgb(35, 150, 127)",
              highlight: "rgb(244, 96, 54)",
            },
          },
        },
      };
    </script>
  </head>
  <body>
    <header class="bg-cta text-primaryText p-4 font-bold">
      <%- include("./partials/navbar.ejs") %>
    </header>
    <main class="p-6 max-w-md mx-auto">
      <h1 class="text-2xl font-bold mb-4"><%= product.productName %>'s Details</h1>
      <form onsubmit="updateProduct(event)">
        <div class="my-2">
          <label for="productName" class="block text-lg font-medium">Product Name</label>
          <input
            type="text"
            id="productName"
            name="productName"
            class="w-full p-2 border rounded"
            value="<%= product.productName %>"
          />
        </div>
        <div class="my-2">
          <label for="price" class="block text-lg font-medium">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            class="w-full p-2 border rounded"
            value="<%= product.price %>"
          />
        </div>
        <button
          type="submit"
          class="w-full p-2 bg-accent text-primaryText rounded hover:bg-highlight mt-2"
        >
          Update
        </button>
        <button
          type="button"
          class="w-full p-2 bg-red-500 text-primaryText rounded hover:bg-highlight mt-2"
          onclick="deleteProduct()"
        >
          Delete
        </button>
      </form>
    </main>
  </body>
  <script>
    const updateProduct = async (event) => {
      event.preventDefault()

      const productName = document.querySelector("input[name=productName]").value
      const price = document.querySelector("input[name=price]").value

      const res = await fetch("/products/<%= product.id %>", {
        method: "PATCH",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ productName, price }),
      })

      if (res.redirected) {
        location.href = res.url
      }
    }

    const deleteProduct = async () => {
      if (confirm("Are you sure you want to delete this product?")) {
        const res = await fetch("/products/<%= product.id %>", {
          method: "DELETE",
        })

        if (res.redirected) {
          location.href = res.url
        }
      }
    }
  </script>
</html>
